<%- include('layout', {title: 'Detalles del producto'}) %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-5">
            <h1>Detalles del producto</h1>
            <div>
                <div class='d-flex align-items-baseline'>
                    <h2 class='pe-5'>Id:</h2>
                    <h3><%= producto.id %></h3>
                </div>
                <div class='d-flex align-items-baseline'>
                    <h2 class='pe-5'>Nombre:</h2>
                    <h3><%= producto.nombre %></h3>
                </div>
                <div class='d-flex align-items-baseline'>
                    <h2 class='pe-5'>Precio:</h2>
                    <h3><%= producto.precio %></h3>
                </div>
            </div>
            <div class='d-flex justify-content-center'>
                <a class='btn btn-primary' href='/producto/editar?id=<%= producto.id %>' role='button'>Editar</a>
            </div>
        </div>
    </div>
</div>
