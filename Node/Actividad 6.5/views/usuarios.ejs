<%- include('layout', {title: 'Usuarios'}) %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="d-flex justify-content-between align-items-baseline">
                <h1>Usuarios</h1>
                <a class="btn btn-primary" href="/usuario" role="button">AÃ±adir usuario</a>
            </div>
            <table class="table table-dark table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.email %></td>
                        <td class="text-end">
                            <a class="btn btn-primary" href="/usuario?id=<%= usuario.id %>" role="button">Ver</a>
                            <a class="btn btn-primary" href="/usuario/editar?id=<%= usuario.id %>" role="button">Editar</a>
                        </td>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
